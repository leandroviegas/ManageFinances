@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManageFinances</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    <link rel="stylesheet" href="~/ManageFinances.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="body">
        <header>
            <nav class="navbar" style="background: #008080">
                <div class="container">
                    <div>
                        <a class="text-light py-2 text-decoration-none fs-5 fw-bold text-uppercase" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fa-solid fa-user me-2"></i>
                            <span>@User.FindFirstValue(ClaimTypes.Name)</span>
                            
                        </a>
                    </div>

                    <ul class="navbar-nav d-flex flex-row align-items-center gap-3">
                        @{
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="SetToken">
                                    <button class="btn bg-light text-teal fw-bold">
                                        Sign Out
                                    </button>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </header>
        <div class="flex-grow-1 d-flex flex-row">
            <nav class="sidebar bg-dark h-full">
                <div class="position-sticky">
                    <ul class="nav flex-column my-2 px-3">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bolder py-2 fs-6" aria-current="true" asp-area="User" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-tachometer-alt me-1"></i>
                                <span>Main Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <hr class="border-top my-2" />
                            <div class="nav-link text-light fw-bolder py-2 fs-6">
                                <i class="fa-solid fa-money-bill-transfer me-1"></i>
                                <span>Expenses</span>
                            </div>
                            <div class="ms-4">
                                <a class="nav-link text-light py-2 fs-6" aria-current="true" asp-area="User" asp-controller="Home" asp-action="Index">
                                    <span>- Expense List</span>
                                </a>
                                <a class="nav-link text-light py-2 fs-6" aria-current="true" asp-area="User" asp-controller="Home" asp-action="Index">
                                    <span>- Add Expense</span>
                                </a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <hr class="border-top my-2" />
                            <div class="nav-link text-light fw-bolder py-2 fs-6">
                                <i class="fa-solid fa-layer-group me-1"></i>
                                <span>Expense Categories</span>
                            </div>
                            <div class="ms-4">
                                <a class="nav-link text-light py-2 fs-6" aria-current="true" asp-area="User" asp-controller="Home" asp-action="Index">
                                    <span> - Category List</span>
                                </a>
                                <a class="nav-link text-light py-2 fs-6" aria-current="true" asp-area="User" asp-controller="Home" asp-action="Index">
                                    <span> - Add Category</span>
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <main role="main" class="h-100">
                @RenderBody()
            </main>
        </div>
    </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
